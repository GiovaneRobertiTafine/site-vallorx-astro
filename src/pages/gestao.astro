---
// Style Imports
import "../styles/global.scss";
// Component Imports
import GestaoVideos from "../components/gestao-videos.astro";
import GestaoEmails from "../components/gestao-email.astro";
let title = "Gestão";

---

<html lang="pt-br">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="/assets/favicon/favicon-32x32.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="/assets/favicon/favicon-16x16.png"
        />
        <link rel="manifest" href="/assets/favicon/site.webmanifest" />
        <link
            rel="mask-icon"
            href="/assets/favicon/safari-pinned-tab.svg"
            color="#fff"
        />
        <title>Vallorx | {title}</title>

        <link
            rel="icon"
            type="image/x-icon"
            href="/assets/favicon/favicon.ico"
        />
        <style>
            .icons-header {
                width: 2em;
            }
        </style>
    </head>

    <body>
        <main>
            <!-- <Navbar client:only="react" pageActive={null} /> -->
            <section id="gestao" class="container mt-5">
			<ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-bs-toggle="tab" href="#gestao-emails">Gestão Emails</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#gestao-videos">Gestão Videos</a>
            </li>
            </ul>

<!-- Tab panes -->
            <div class="tab-content">
            <div class="tab-pane active mt-3" id="gestao-emails">
                <GestaoEmails />
            </div>
            <div class="tab-pane fade mt-3" id="gestao-videos">
                <GestaoVideos />
            </div>
          
            </div>
            </section>
        </main>
    </body>
    <script>
         import "bootstrap/dist/js/bootstrap.bundle.min.js";
        
         const isProd = import.meta.env.VITE_SENHA_SECRETA;
    const isDev = import.meta.env.PUBLIC_TODOS;
    console.log(isProd, isDev, import.meta.env.PROD, import.meta.env.DEV);
    </script>
</html>