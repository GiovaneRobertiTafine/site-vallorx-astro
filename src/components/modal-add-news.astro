---
import '../styles/global.scss';
---

<!-- Modal -->
<div class="modal fade" id="addModal" tabindex={-1} aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addModalLabel">Adicionar News</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="needs-validation" id="form-add" novalidate>
                    <div class="mb-3">
                        <label for="inputTitle" class="form-label">Título</label>
                        <input type="text" class="form-control" id="inputTitle" aria-describedby="title" title="title" name="title" required>
                        <div class="invalid-feedback">
                            Título é obrigatório
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="inputVideo" class="form-label">Video</label>
                        <input class="form-control" type="file" id="inputVideo" aria-describedby="video" title="video" name="video" required>
                        <div class="invalid-feedback">
                            Vídeo é obrigatório
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="textAreaDescription" class="form-label">Descrição:</label>
                        <textarea class="form-control" id="textAreaDescription" rows={5} name="description"
                            style="overflow-y: auto; resize: none;" title="description" required></textarea>
                        <div class="invalid-feedback">
                            Descrição é obrigatório
                        </div>
                    </div>
                </form>
            <div class="progress d-none">
                <div class="progress-bar" id="progress-add-news" role="progressbar" aria-valuenow={0} aria-valuenow={0} aria-valuemin={0} aria-valuemax={100}></div>
            </div>
            </div>
            <div class="px-3 d-none text-success" id="resposta-add-news-success">
                
            </div>
            <div class="px-3 d-none text-danger" id="resposta-add-news-error">
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="gestaoVideos.addNews()" id="btn-save">
                    <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true" id="spinner-save"></span>
                    Salvar
                </button>
            </div>
        
        </div>
    </div>

</div>
