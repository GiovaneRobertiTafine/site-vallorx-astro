---
import '../styles/global.scss';
---
<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex={-1} aria-labelledby="deleteLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteLabel">Deletar News</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="modal-body-delete">

            </div>
            <div class="px-3 d-none text-success" id="resposta-delete-news-success">
                
            </div>
            <div class="px-3 d-none text-danger" id="resposta-delete-news-error">
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="gestaoVideos.deleteNews()" id="btn-confirm">
                    <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true" id="spinner-confirm"></span>
                    Confirmar
                </button>
            </div>
        
        </div>
    </div>
</div>
